        meta(name="viewport", content="width=device-width,initial-scale=1")
        title Global Car SAC
        link(href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet")
        link(href="/css/font-awesome/css/font-awesome.min.css" rel="stylesheet")
        link(rel="stylesheet" href="/css/styles.css")
    body
        a.float-btn-container
            span(href="#" class="fa fa-angle-up")
        .mobile-bar
            .title
                img(src="/img/logo/logo.png" alt="Global Car")
                h1 Global Car
            span(class="fa fa-bars btn-menu")
        header
            .logo
                figure
                    img(src="/img/logo/logo.png" alt="Global Car")
            nav(class="menu-nav")
                ul
                    li
                        a(href="/") Inicio
                    li
                        a(href="/nosotros") Nosotros
                    li
                        a(href="#") Cursos
                            span.fa.fa-angle-down
                        ul.courses-menu
                            li
                                a(href="/cursos/nuevos-ai") Nuevos AI
                            li
                                a(href="/cursos/recategorizacion") Recategorización
                            li
                                a(href="/cursos/solo-manejo") Solo manejo
                            li
                                a(href="/cursos/manejo-defensivo") Manejo defensivo
                            li
                                a(href="/cursos/camioneta") Camioneta 4x4

                    li
                        a(href="/categorias") Categorías
                        ul.categories-menu
                            li
                                a(href="/categorias/ai") AI
                            li
                                a(href="/categorias/aiia") AIIa
                            li
                                a(href="/categorias/aiib") AIIb
                            li
                                a(href="/categorias/aiiia") AIIIa
                            li
                                a(href="/categorias/aiiib") AIIIb
                            li
                                a(href="/categorias/aiiic") AIIIc
                    li
                        a(href="/locales") Locales
                    li
                        a(href="/galeria") Galería
                    li
                        a(href="clientes") Clientes
                    li
                        a(href="contacto") Contacto
        block content
        .section-contact
            h3 Llámanos, escríbenos o ven a nuestras oficinas!
            hr
            .container
                .contact-remote
                    .item-remote.phone
                        span.fa.fa-phone
                        .text-item-remote
                            h4 Telefonos
                            p (044) 630400
                                br
                                | RMP: #966 888 608
                    .item-remote
                        span.fa.fa-envelope-open
                        .text-item-remote
                            h4 Email
                            p contacto@globalcar.pe
                .contact-maps
                    .map-item
                        iframe(src="https://www.google.com/maps/d/embed?mid=1xV8WVKWLGs_XdmO3M7nK39HLEog" width="100%" height="250px" frameborder="0")
                        p Av. América Oeste #580 - Los Cedros, Trujillo.
                    .map-item
                        iframe(src="https://www.google.com/maps/d/embed?mid=1KC16Go5sr1YDq-y_1p23JICT210" width="100%" height="250px" frameborder="0")
                        p Av. Costa Rica #000 (Al Costado del MTC), Trujillo.
        footer
            .footer-social
                span.fb.social-item
                span.tw.social-item
                span.lin.social-item
            .footer-links
                figure.mtc
                    img(src="/img/footer/mtc.png" alt="Autorizado por el Ministerio de Trasportes y Comunicaciones")
                figure.google-play
                    img(src="/img/footer/google-play.png" alt="Descarga nuestra app disponible en la Google Play")
            p Global Car SAC &copy; 2017. Privacy Policy | Desarrollado por HeadCita
        script(src="/js/source.js")